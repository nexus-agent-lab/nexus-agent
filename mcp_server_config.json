{
    "mcpServers": {
        "homeassistant": {
            "command": "node",
            "cwd": "/app/external_mcp/mcp-homeassistant",
            "args": [
                "/app/external_mcp/mcp-homeassistant/build/index.js"
            ],
            "enabled": true,
            "source": "hybrid"
        },
        "demo_server": {
            "command": "python",
            "args": [
                "/app/servers/demo_tool.py"
            ],
            "enabled": true,
            "source": "local",
            "required_role": "admin"
        }
    }
}