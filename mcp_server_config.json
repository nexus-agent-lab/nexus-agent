{
    "mcpServers": {
        "homeassistant": {
            "url": "http://mcp-homeassistant:8080/sse",
            "source": "remote",
            "enabled": true,
            "skill_file": "homeassistant.md",
            "system_instruction": "",
            "tool_config": {
                "query_entities": {
                    "cache_ttl": 1800
                },
                "get_entity_state": {
                    "cache_ttl": 5
                },
                "call_service": {
                    "cache_ttl": 0
                },
                "get_history": {
                    "cache_ttl": 60
                }
            }
        },
        "lark-mcp": {
            "url": "http://lark-mcp:3000/mcp",
            "source": "remote",
            "enabled": true,
            "required_role": "user"
        },
        "demo_server": {
            "command": "python",
            "args": [
                "/app/servers/demo_tool.py"
            ],
            "enabled": true,
            "source": "local",
            "required_role": "admin"
        }
    }
}